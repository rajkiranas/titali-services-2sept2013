    <bean id="dataSource" class = "com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="org.postgresql.Driver" />
        <property name="jdbcUrl" value="jdbc:postgresql://192.168.1.107:5432/postgres" />
        <property name="user" value="postgres" />
        <property name="password" value="Sateri@123" /> 

        <!-- these are C3P0 properties -->
        <property name="acquireIncrement" value="2" />
        <property name="minPoolSize" value="3" />
        <property name="maxPoolSize" value="50" />
        <property name="maxIdleTime" value="100" />
        <property name="idleConnectionTestPeriod" value="600"/>
        <property name="testConnectionOnCheckout" value="true"/>
        <property name="testConnectionOnCheckin" value="false"/>
    </bean>
 
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
                

		<property name="packagesToScan" value="com.quick.tim.mobileserviceprovider.entity" />
                
		<property name="hibernateProperties">
			<props>
	<!--		<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>-->
	                <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</prop>
				<!-- uncomment this for first time run-->
<!--				<prop key="hibernate.hbm2ddl.auto">create</prop>-->
				<prop key="hibernate.show_sql">true</prop>
                                <prop key="">false</prop>
                                <!--prop key= "hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</prop>      
                                <prop key="hibernate.c3p0.acquire_increment">5</prop>
                                <prop key="hibernate.c3p0.idle_test_period">1800</prop>
                                <prop key="hibernate.c3p0.max_size">600</prop>
                                <prop key="hibernate.c3p0.max_statements">50</prop>
                                <prop key="hibernate.c3p0.min_size">5</prop>
                                <prop key="hibernate.c3p0.timeout">1800</prop-->
			</props>
		</property>
	</bean>
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
      <tx:annotation-driven />
